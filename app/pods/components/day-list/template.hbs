<h2 class="text-2xl">
  Days
  <div class="inline-block">
    <div class="bg-green-400 text-base text-gray-800 w-5 h-5 rounded-full flex justify-center items-center">
      {{this.totalDays}}
    </div>
  </div>
</h2>


{{#if this.days.loading}}
  Loading...
{{else}}
  <ul>
    {{#each this.days.data.trackedDaysPaginated.edges as |day|}}
      <li>
        <LinkTo @route="tracker.day" @model={{day.node.id}}>{{day-js date=day.node.date}}</LinkTo>
      </li>
    {{/each}}
  </ul>
{{/if}}