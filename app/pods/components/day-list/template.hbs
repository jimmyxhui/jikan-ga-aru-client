<h2 class="text-2xl text-amber-400 p-1">
  Days
  <Ui::Counter @value={{this.totalDays}} />
</h2>
<EmberFlatpickr
  @date={{this.date}}
  @onChange={{this.onDateChange}}
  @enableTime={{false}}
  @onReady={{this.onReady}}
  placeholder='Add new date...'
/>
{{#if this.days.loading}}
  Loading...
{{else}}
  <ul>
    {{#each (sort-by 'node.date:desc' this.days.data.trackedDaysPaginated.edges) as |day|}}
      <DayList::DayDisplay @day={{day.node}} />
    {{/each}}
  </ul>
{{/if}}